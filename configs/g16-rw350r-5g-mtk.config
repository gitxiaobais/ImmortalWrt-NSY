# ==============================================
# 核心设备选型（RK3568 G16 专属）
# ==============================================
CONFIG_TARGET_rockchip=y
CONFIG_TARGET_rockchip_armv8=y
CONFIG_TARGET_rockchip_armv8_DEVICE_nsy-g16=y

# ==============================================
# 联发科RW350R 5G模块（MBIM协议）核心支持
# ==============================================
# MBIM协议拨号核心组件
CONFIG_PACKAGE_luci-proto-mbim=y
CONFIG_PACKAGE_kmod-usb-net-cdc-mbim=y

# USB串口/网络支持（联发科模组必备依赖）
CONFIG_PACKAGE_kmod-usb-net-rndis=y
CONFIG_PACKAGE_kmod-usb-serial-option=y
CONFIG_PACKAGE_kmod-usb-serial-wwan=y

# 模组管理工具（可选，推荐启用，方便调试/管理5G模块）
CONFIG_PACKAGE_modemmanager=y
CONFIG_PACKAGE_luci-app-modemmanager=y
CONFIG_PACKAGE_libmbim=y
CONFIG_PACKAGE_libqmi=y  # 兼容部分双模模组，不影响MBIM使用

# ==============================================
# 128G 大容量存储适配（扩容根分区/内核分区）
# ==============================================
CONFIG_TARGET_ROOTFS_PARTSIZE=10240  # 根分区扩容为10G（适配128G存储，可按需调整）
CONFIG_TARGET_KERNEL_PARTSIZE=256    # 内核分区256M，满足固件运行需求

# ==============================================
# 基础LuCI界面与必备工具（保证固件可用/易用）
# ==============================================
# LuCI Web管理界面（必选）
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-argon=y  # 美观易用的Argon主题
CONFIG_PACKAGE_luci-app-opkg=y      # 软件包管理工具

# 系统基础工具
CONFIG_PACKAGE_coreutils=y
CONFIG_PACKAGE_coreutils-nohup=y

# 网络调试/实用工具
CONFIG_PACKAGE_net-tools=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_ping=y
CONFIG_PACKAGE_tcpdump=y  # 可选，网络故障排查用

# ==============================================
# 额外优化（可选，按需保留/删除）
# ==============================================
# 启用USB存储支持（可外接U盘/硬盘，搭配128G内置存储使用）
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-uas=y
CONFIG_PACKAGE_mount-utils=y
CONFIG_PACKAGE_fdisk=y

# 防火墙基础配置
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_luci-app-firewall=y

# SSH远程管理（默认启用，方便远程调试）
CONFIG_PACKAGE_dropbear=y
